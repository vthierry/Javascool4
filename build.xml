<!-- Commandes de gestion/maintenance du projet -->
<project default="usage">

  <target name="usage"><echo level="info">
    ant svn			synchronize les fichiers avec le svn
  </echo></target>

  <target name="svn"> 
    <ant dir="./work" target="clean"/>
    <exec executable="svn">
      <arg value="cleanup"/>
    </exec>
    <exec executable="svn">
      <arg value="up"/>
    </exec>
    <exec executable="svn">
      <arg value="ci"/>
      <arg line="-m modif-mineure"/>
    </exec>
    <exec executable="svn">
      <arg value="status"/>
    </exec>
  </target>
</project>
